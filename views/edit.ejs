<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/stars.css">
    <title>Edit</title>
</head>

<body>
    <script src="/js/stars.js" defer></script>
    <canvas id="starfield" width="3000" height="2000"></canvas>
    <link rel="stylesheet" href="/css/stars.css">
    <!-- if planet is undefined -->
    <% if (typeof planet==="undefined" ) { %>
        <div class="title">
            <%= star.name %>
        </div>
        <table>
            <tbody>
                <tr>
                    <td>
                        <img src="/img/star.png" class="bigstar">
                    </td>
                    <td>
                        <table class="table table-dark table-hover">
                            <form action="/system/edit/<%=star._id%>" method="post">
                            <tbody>
                                <tr>
                                    <td>
                                        Absolute Magnitude
                                    </td>
                                    <td>
                                            <input class="form-control" type="number" name="absoluteMagnitude">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Mass
                                    </td>
                                    <td>
                                            <input class="form-control" type="number" name="mass">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Radius
                                    </td>
                                    <td>
                                            <input class="form-control" type="number" name="radius">
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                            <input type="submit" class="btn btn-primary" value="Submit">
                                    </td>
                                </tr>
                            </tbody>
                        </form>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
        <% } else { %>
            <div class="title">
                <%= planet.name %>
            </div>
            <table>
                <tbody>
                    <tr>
                        <td>
                            <img src="/img/planet.png" class="bigstar">
                        </td>
                        <td>
                            <table class="table table-dark table-hover">
                                <form action="/system/edit/planet/<%=id%>/<%=planet._id%>" method="post">
                                    <tbody>
                                        <tr>
                                            <td>
                                                Orbital speed
                                            </td>
                                            <td>
                                                    <input class="form-control" type="number" name="orbitalSpeed">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Mass
                                            </td>
                                            <td>
                                                    <input class="form-control" type="number" name="mass">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Radius
                                            </td>
                                            <td>
                                                    <input class="form-control" type="number" name="radius">
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <!-- submit form -->

                                                <input type="submit" class="btn btn-primary" value="Submit">

                                            </td>
                                        </tr>
                                    </tbody>
                                </form>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            <% } %>

</body>

</html>